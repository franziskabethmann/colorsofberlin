<div class="card-category">
  <h1>colors of berlin</h1>
</div>

<div class="container">
  <div class="row">
    <% @pictures.each do |picture| %>
      <div class="col-md-6 col-lg-4">
        <div class="card" style="width: 18rem">
          <img src="<%= picture.photo %>" class="card-img-top" alt="..." style="background-image">
          <div class="card-body">
            <h5 class="card-title"><%= picture.date %></h5>
            <h5 class="card-title"><%= picture.address %></h5>
            <%= link_to "view picture", picture_path(picture), class: "btn btn-primary" %>
            <%= link_to "âœ—", picture_path(picture), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="add">
    <%= link_to "+ Add a Picture", new_picture_path, class: "btn btn-primary"%>
  </div>
</div>
