<h1>add a picture</h1>

<div class="container">
  <div class="row" id="form-space">
    <div class="col-12 col-lg-6" id="form">
      <%= simple_form_for [@picture] do |f| %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :date %>
        <%= f.input :address %>
        <%= f.submit "add picture", class: "btn-main"%>
      <% end %>
      <br>
      <p><%= link_to "back to picture overview", pictures_path %></p>
    </div>
  </div>
</div>
