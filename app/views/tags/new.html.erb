<div class="container">
  <div class="row" id="picture-space">
    <div class="card-new-tag">
      <%= cl_image_tag @picture.photo, class: "card-img-top", style: "background-image" %>
      <h3 class="card-title"><%= @picture.date %></h3>
      <h3 class="card-title"><%= @picture.address %></h3>
    </div>
    <div class="container">
      <p><%= link_to "back to the picture", picture_path(@picture) %></p>
    </div>
  </div>

  <div class="row" id="form-space">
    <div class="col-12 col-lg-6" id="form">
      <%= simple_form_for [@picture, @tag] do |f| %>
        <%= f.association :color %>
        <%= f.submit "add color", class: "btn-main-form" %>
      <% end %>
    </div>
  </div>
</div>
